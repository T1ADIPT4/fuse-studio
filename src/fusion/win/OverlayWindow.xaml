<windows:WindowWithOverlays x:Class="Outracks.Fusion.Windows.OverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:windows="clr-namespace:Outracks.Fusion.Windows"
    Background = "Transparent"
	WindowStyle = "None"
	AllowsTransparency = "True"
	ShowInTaskbar ="False">

	<windows:WindowWithOverlays.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="StyleResources.xaml"></ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</windows:WindowWithOverlays.Resources>

</windows:WindowWithOverlays>
